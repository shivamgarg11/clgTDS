<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shivam.tds.Fragments.questionofweekfragment"
    android:orientation="vertical"
    android:background="#04102b">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUESTION OF WEEK"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#fff"
        android:textStyle="bold"
        android:alpha="0.9"/>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#fff"
        android:alpha="0.9"/>

    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#fff"
        android:alpha="0.9"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/progressionbarquestionofweek"/>


    <ListView
        android:layout_marginTop="20dp"
        android:id="@+id/listviewquestionofweek"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_marginBottom="20dp">

    </ListView>



</LinearLayout>